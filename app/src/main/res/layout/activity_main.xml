<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ivan.lab3.MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/toDoList"
        android:layout_height="175dp"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Delete Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteDoneBtn"
        android:layout_below="@+id/toDoList"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <Button
        android:text="Add Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addItemBtn"
        android:layout_marginTop="48dp"
        android:layout_alignTop="@+id/deleteDoneBtn"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="New task"
        android:ems="10"
        android:id="@+id/newTaskText"
        android:layout_alignBottom="@+id/addItemBtn"
        android:layout_toEndOf="@+id/addItemBtn" />

</RelativeLayout>
